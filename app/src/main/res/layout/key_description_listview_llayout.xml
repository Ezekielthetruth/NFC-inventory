<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/asterisk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:gravity="center"
        android:text="*"
        android:textColor="@color/remove_key_des_button_color"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/text_key_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="key description"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/asterisk"
        android:layout_toRightOf="@+id/asterisk"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="normal" />


    <at.markushi.ui.CircleButton
        android:id="@+id/layout_edit_key_des"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/layout_remove_key_des"
        android:layout_toStartOf="@+id/layout_remove_key_des"
        android:padding="10dp"
        android:src="@drawable/ic_create_white_48dp"
        app:cb_color="@color/colorAccent"
        app:cb_pressedRingWidth="8dip" />


    <at.markushi.ui.CircleButton
        android:id="@+id/layout_remove_key_des"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/ic_clear_white_48dp"
        android:textColor="@color/white"
        app:cb_color="@color/remove_key_des_button_color"
        app:cb_pressedRingWidth="8dip" />


</RelativeLayout>