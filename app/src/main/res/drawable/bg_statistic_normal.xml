<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#366bd4" android:endColor="#1c376e" android:angle="270" />
            <stroke android:width="1dp" android:color="#dcdcdc" />
            <corners android:radius="25dp" />
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="#366bd4" android:endColor="#1c376e" android:angle="270" />
            <stroke android:width="1dp" android:color="#dcdcdc" />
            <corners android:radius="25dp" />
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="@color/bg_statistic_normal" android:endColor="@color/bg_statistic_normal" android:angle="270" />
            <stroke android:width="1dp" android:color="#313131" />
            <corners android:radius="0dp" />
            <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="0dp" />
        </shape>
    </item>
</selector>


